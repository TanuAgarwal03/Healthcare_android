<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BuyMedicineBookActivity">

    <TextView
        android:id="@+id/buyMedBook_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24*7 Healthcare"
        android:textSize="34sp"
        android:textColor="@color/purpleDark"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyMedBook_title"
        android:text = "Please fill all details for Booking"
        android:layout_below="@+id/buyMedBook_head"
        android:textSize="24sp"
        android:textColor="@color/yellowLight"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/buyMedBook_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buyMedBook_title"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/buyMedBook_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buyMedBook_fullname"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Address"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#D3D3D3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/buyMedBook_pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buyMedBook_address"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Pincode"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColorHint="#D3D3D3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/buyMedBook_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buyMedBook_pincode"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:hint="Contact Number"
        android:inputType="phone"
        android:padding="10dp"
        android:textColorHint="#D3D3D3"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="BOOK"
        android:background="@drawable/input_bg"
        android:textSize="25sp"
        android:id="@+id/buyMedBook_btnBook"
        android:layout_below="@id/buyMedBook_contact"
        android:layout_marginTop="50dp" />

</RelativeLayout>