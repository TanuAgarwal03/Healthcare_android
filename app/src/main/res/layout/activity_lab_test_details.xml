<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".LabTestDetailsActivity">

    <TextView
        android:id="@+id/labTestDetail_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="24*7 HEALTHCARE"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labTestDetail_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labTestDetail_head"
        android:layout_marginTop="10dp"
        android:text="Deliver Location : Jaipur"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labTestDetail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labTestDetail_location"
        android:layout_marginTop="5dp"
        android:text="LAB TEST AND PACKAGES"
        android:textAlignment="center"
        android:textColor="@color/yellowLight"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/labTestDetail_editTextMultiLine"
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:layout_below="@id/labTestDetail_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:editable="false"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:text="Hi \nHello"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/labTestDetail_totalCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labTestDetail_editTextMultiLine"
        android:layout_marginHorizontal="70dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/labTestDetail_btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labTestDetail_totalCost"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="20dp"
        android:background="@color/purple_200"
        android:text="ADD TO CART"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/labTestDetail_btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labTestDetail_btnAddToCart"
        android:layout_marginHorizontal="150dp"
        android:background="@color/purple_200"
        android:text="BACK"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>