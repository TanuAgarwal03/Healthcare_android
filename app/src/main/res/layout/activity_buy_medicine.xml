<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BuyMedicineActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyMedicine_head"
        android:text="24*7 HEALTHCARE"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyMedicine_location"
        android:layout_below="@+id/buyMedicine_head"
        android:text="Deliver Location : Jaipur"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyMedicine_title"
        android:layout_below="@+id/buyMedicine_location"
        android:text="BUY MEDICINES"
        android:textStyle="bold"
        android:textColor="@color/yellowLight"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>

    <ListView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:id="@+id/buyMedicine_listView"
        android:layout_below="@id/buyMedicine_title"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyMedicine_cartBtn"
        android:text="GO TO CART"
        android:layout_marginTop="20dp"
        android:layout_below="@id/buyMedicine_listView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyMedicine_backBtn"
        android:text="BACK"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@id/buyMedicine_listView"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>