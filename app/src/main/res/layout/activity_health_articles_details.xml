<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HealthArticlesDetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/healthArticlesDetails_head"
        android:text="24*7 HEALTHCARE"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/healthArticlesDetails_title"
        android:layout_below="@+id/healthArticlesDetails_head"
        android:text="DENTIST"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/healthArticlesDetails_imageview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/healthArticlesDetails_title"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/health1" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/healthArticlesDetails_backBtn"
        android:text="BACK"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/healthArticlesDetails_imageview" />


</RelativeLayout>